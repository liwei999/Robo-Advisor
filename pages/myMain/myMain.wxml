<!--pages/myMain/myMain.wxml-->
<view class='first'>
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">收益表现</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">回撤走势</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">月投收益</view>
  </view>
   
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange">
    <!-- 收益表现 -->
    <swiper-item>
    <view style='width:100%; height:100%;display:{{hidden_arr[0]?"block":"none"}};'>
       <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec_line }}" style='width:{{width}}' ></ec-canvas>  
    </view>
    </swiper-item>
    <!-- 回撤走势 -->
    <swiper-item>
    <view style='width:100%; height:100%;display:{{hidden_arr[1]?"block":"none"}};'>
    回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势回撤走势
    </view>
    </swiper-item>
    <!-- 月投收益 -->
    <swiper-item>
    <view style='width:100%; height:100%;display:{{hidden_arr[2]?"block":"none"}};'>
    月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益月投收益
    </view>
      
    </swiper-item>
  </swiper>

  <view class='first_tab'>
    <view class='{{item_bar[0]?"first_tab_on":""}}' bindtap='on_first_tab' data-index='0'>近三月</view>
    <view class='{{item_bar[1]?"first_tab_on":""}}' bindtap='on_first_tab' data-index='1'>近半年</view>
    <view class='{{item_bar[2]?"first_tab_on":""}}' bindtap='on_first_tab' data-index='2'>近一年</view>
    <view class='{{item_bar[3]?"first_tab_on":""}}' bindtap='on_first_tab' data-index='3'>成立以来</view>
  </view>

  <view class="first_foot">
    <view>
     <view>年化收益</view>
     <view class="orange">5.18%</view>
    </view>
    <view>
     <view>年化波动率</view>
     <view class="blank">2.19%</view>
    </view>
    <view>
     <view>最大回撤</view>
     <view class="green">-2.92%</view>
    </view>
    <view>
     <view style='border-right:0'>夏普比率</view>
     <view style='border-right:0' class="blank">--</view>
    </view>
  </view>
</view>

<view class='first two'>
 <view class='two_class'>组合配置</view>
 <image src='../../image/temp2.png' style='width:690rpx; height:460rpx;'></image>
</view>

<view class='first three'>


 <view class="three1" wx:for="{{fund_data.type}}" wx:for-index="type_index" wx:for-item="itemName" style='background-color:{{fund_data.type.length-1!=type_index?item_color[type_index]:item_color[9]}}'>
    <view class="three_type">{{itemName}}</view>
    <view class="three_item" wx:for="{{fund_data.fund}}" wx:for-item="funditem"  wx:if="{{funditem.type==itemName}}">
    
      <view>
        <view class='three_name'>{{funditem.jjmc}}</view>
        <view class='three_jysdm'>{{funditem.jjdm}}</view>
      </view>
      <view class='three_bl'>{{funditem.bl}}%</view>
    
    </view>
  </view>


