/**tab样式**/  
.swiper-tab{  
    line-height: 60rpx;
    border:1rpx solid #ffffff;
    /* background-color: #19A7E9; */
    border-radius: 10rpx 10rpx 0 0;
    display: flex;
    flex-direction: row;
    text-align: center;
    }  
.swiper-tab-list{
    font-size: 28rpx;
    width: 25%;  
    color: #fff;
}  
.on{ color: #0E98D8;background-color: #FFFFFF; }  
  
.view{margin-bottom: 10rpx;}

.counten{padding: 19rpx;color: #FFFFFF;font-size: 26rpx; border:1rpx solid #ffffff;display: block;word-break: break-all;border-radius:0 0 10rpx 10rpx;}

.one{padding: 24rpx 30rpx 14rpx 30rpx;background-color: #0E98D8;}

.three1{margin-bottom: 10rpx;display: flex;flex-direction: column;background-color: #0e98d8; padding-bottom: 24rpx;}
.three1:last-child{margin-bottom: 0;}
.three_item{display: flex;flex-direction: row; align-items: center; justify-content: center; background-color: #fff;margin: 0 40rpx 2rpx 40rpx; padding-left: 18rpx;}
.operation{background: #19A7E9;border-radius:20rpx; width: 40rpx;height:32rpx; font-size: 24rpx; color: #FFFFFF; text-align: center;padding-top: 8rpx}
.fund_item{ flex: 3;overflow:hidden;}
.three_name{color:#373737;font-size: 32rpx;padding-top: 22rpx; padding-left: 19rpx;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.three_jysdm{color: #FF502E;font-size: 24rpx; padding-bottom: 21rpx;padding-top: 5rpx; padding-left: 19rpx;}
.three_type{text-align: center; padding:23rpx 0;font-size: 32rpx;color:#fff;}
.three_bl{color:#19A7E9; margin-right: 20rpx; font-size: 32rpx; text-align: center;flex: 3;}
.three_bl text{font-size: 24rpx; }